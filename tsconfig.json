{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": [
			"DOM",
			"ESNext",
			"es6",
			"dom.iterable",
			"scripthost"
		],
		"baseUrl": ".",
		"paths": {
			"@component/*": [
				"src/main/Component/*"
			],
			"@context/*": [
				"src/main/Context/*"
			],
			"@entity/*": [
				"src/main/Entity/*"
			],
			"@hook/*": [
				"src/main/Hook/*"
			],
			"@layout/*": [
				"src/main/Layout/*"
			],
			"@page/*": [
				"src/main/Page/*"
			],
			"@service/*": [
				"src/main/Service/*"
			],
			"@type/*": [
				"src/main/Type/*"
			],
			"@util/*": [
				"src/main/Util/*"
			]
		},
		"jsx": "react-jsx",
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": [
			"jest",
			"node",
			"@testing-library/jest-dom"
		]
	},
	"include": [
		"src/main/**/*",
		"src/tests/**/*",
		"./jest.config.ts"
	]
}
